{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post" class="form-inline">
    <div class="form-group">
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="password"  name="_password" placeholder="Password" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-default">Войти</button>
    <a href="{{path('user_registration')}}" class="btn btn-default">Регистрация</a>
</form>