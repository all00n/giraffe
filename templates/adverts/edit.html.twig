{{ render(controller('App\\Controller\\HeaderController::index',{'title':'Редактировать пост'})) }}

    <h1>Редактировать пост</h1>
    
    <form action ="{{ path('advert.edit',{'slug':advert.id}) }}" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="advert_title" class="col-sm-2 control-label">Заголовок</label>
        <div class="col-sm-10">
            <input name="title" type="text" class="form-control" id="advert_title" placeholder="Заголовок" value="{{ advert.title }}">
            {% if errors.title is defined %}
                <span class="text-danger">Не валидный заголовок</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label for="advert_description" class="col-sm-2 control-label">Описание</label>
        <div class="col-sm-10">
            <textarea name="description" class="form-control" rows="3" id="advert_description" placeholder="Описание">{{advert.description}}</textarea>
            {% if errors.description is defined %}
                <span class="text-danger">Не валидное описание</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Редактировать</button>
            <a type="button" class="btn btn-danger right" href="{{path('advert.remove',{'slug':advert.id})}}">Удалить</a>
        </div>
    </div>
    </form>
{% include 'main/footer.html.twig'%}